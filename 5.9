"""

Use array to mark multiples of primes numbers index as -1, return count of non -1 values

"""

class Solution(object):
    def countPrimes(self, n):
        """
        :type n: int
        :rtype: int
        """
        if n <= 1:
            return 0
        
        nums = range(0,n)
    
        i = 2
        count = 0
        
        while i < len(nums):
            
            if nums[i]!=-1:
                count+=1
                curr = nums[i]*nums[i]
                
                while curr < len(nums):
                    
                    nums[curr] = -1
                    curr+=nums[i]
            i+=1
       
        return count
        
        
        
        
